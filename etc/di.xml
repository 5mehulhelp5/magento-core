<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- global framework interfaces :: data mapping-->
    <preference for="SoftCommerce\Core\Framework\DataMap\StatusToFaMappingInterface" type="SoftCommerce\Core\Framework\DataMap\StatusToFaMapping"/>
    <preference for="SoftCommerce\Core\Framework\DataMap\StatusToLabelMappingInterface" type="SoftCommerce\Core\Framework\DataMap\StatusToLabelMapping"/>
    <!-- global framework interfaces :: data storage-->
    <preference for="SoftCommerce\Core\Framework\DataStorageInterface" type="SoftCommerce\Core\Framework\DataStorage"/>
    <preference for="SoftCommerce\Core\Framework\DataStorage\OutputArrayInterface" type="SoftCommerce\Core\Framework\DataStorage\OutputArray"/>
    <preference for="SoftCommerce\Core\Framework\DataStorage\OutputArrayPrintReadableInterface" type="SoftCommerce\Core\Framework\DataStorage\OutputArrayPrintReadable"/>
    <preference for="SoftCommerce\Core\Framework\DataStorage\OutputHtmlInterface" type="SoftCommerce\Core\Framework\DataStorage\OutputHtml"/>
    <preference for="SoftCommerce\Core\Framework\DataStorage\OutputMessageManagerInterface" type="SoftCommerce\Core\Framework\DataStorage\OutputMessageManager"/>
    <preference for="SoftCommerce\Core\Framework\DataStorage\StatusPredictionInterface" type="SoftCommerce\Core\Framework\DataStorage\StatusPrediction"/>
    <preference for="SoftCommerce\Core\Framework\IsAssociativeArrayInterface" type="SoftCommerce\Core\Framework\IsAssociativeArray"/>
    <preference for="SoftCommerce\Core\Framework\IsMultidimensionalArrayInterface" type="SoftCommerce\Core\Framework\IsMultidimensionalArray"/>
    <preference for="SoftCommerce\Core\Framework\SearchMultidimensionalArrayInterface" type="SoftCommerce\Core\Framework\SearchMultidimensionalArray"/>
    <!-- global framework interfaces :: DB -->
    <preference for="SoftCommerce\Core\Framework\DB\QueryResultDataTypeConverterInterface" type="SoftCommerce\Core\Framework\DB\QueryResultDataTypeConverter"/>
    <!-- global framework interfaces :: message storage -->
    <preference for="SoftCommerce\Core\Framework\MessageStorageInterface" type="SoftCommerce\Core\Framework\MessageStorage"/>
    <preference for="SoftCommerce\Core\Framework\MessageStorage\OutputArrayInterface" type="SoftCommerce\Core\Framework\MessageStorage\OutputArray"/>
    <preference for="SoftCommerce\Core\Framework\MessageStorage\OutputConsoleInterface" type="SoftCommerce\Core\Framework\MessageStorage\OutputConsole"/>
    <preference for="SoftCommerce\Core\Framework\MessageStorage\OutputHtmlInterface" type="SoftCommerce\Core\Framework\MessageStorage\OutputHtml"/>
    <preference for="SoftCommerce\Core\Framework\MessageStorage\OutputMessageManagerInterface" type="SoftCommerce\Core\Framework\MessageStorage\OutputMessageManager"/>
    <preference for="SoftCommerce\Core\Framework\MessageStorage\StatusPredictionInterface" type="SoftCommerce\Core\Framework\MessageStorage\StatusPrediction"/>
    <!-- global config ::: interface | repository | management -->
    <preference for="SoftCommerce\Core\Model\Config\DateTimeLocaleInterface" type="SoftCommerce\Core\Model\Config\DateTimeLocale"/>
    <preference for="SoftCommerce\Core\Model\Config\DeveloperInterface" type="SoftCommerce\Core\Model\Config\Developer"/>
    <!-- global Eav helper ::: interface | repository -->
    <preference for="SoftCommerce\Core\Model\Eav\GetAttributeEntityTypeIdInterface" type="SoftCommerce\Core\Model\Eav\GetAttributeEntityTypeId"/>
    <preference for="SoftCommerce\Core\Model\Eav\GetDefaultAttributeSetIdInterface" type="SoftCommerce\Core\Model\Eav\GetDefaultAttributeSetId"/>
    <!-- vendor module list ::: interface -->
    <preference for="SoftCommerce\Core\Model\ModuleListProviderInterface" type="SoftCommerce\Core\Model\ModuleListProvider"/>
    <!-- model source options ::: interface -->
    <preference for="SoftCommerce\Core\Model\Source\StatusInterface" type="SoftCommerce\Core\Model\Source\Status"/>
    <!-- model utilities -->
    <preference for="SoftCommerce\Core\Model\Utils\GetEntityMetadataInterface" type="SoftCommerce\Core\Model\Utils\GetEntityMetadata"/>
    <preference for="SoftCommerce\Core\Model\Utils\GetEntityTypeIdInterface" type="SoftCommerce\Core\Model\Utils\GetEntityTypeId"/>
    <preference for="SoftCommerce\Core\Model\Utils\SkuStorageInterface" type="SoftCommerce\Core\Model\Utils\SkuStorage"/>
    <preference for="SoftCommerce\Core\Model\Utils\WebsiteStorageInterface" type="SoftCommerce\Core\Model\Utils\WebsiteStorage"/>
    <!-- Logger -->
    <preference for="SoftCommerce\Core\Logger\LogProcessorInterface" type="SoftCommerce\Core\Logger\LogProcessor"/>
    <type name="SoftCommerce\Core\Logger\Handler\RotationSteamHandler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <virtualType name="SoftCommerce\Core\VirtualStreamHandler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">var/log/softcommerce/debug.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="SoftCommerce\Core\VirtualRotationStreamHandler" type="SoftCommerce\Core\Logger\Handler\RotationSteamHandler">
        <arguments>
            <argument name="fileName" xsi:type="string">var/log/softcommerce/debug.log</argument>
        </arguments>
    </virtualType>
    <type name="SoftCommerce\Core\Logger\LogProcessor">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">SoftCommerce\Core\VirtualStreamHandler</item>
                <item name="rotation_debug" xsi:type="object">SoftCommerce\Core\VirtualRotationStreamHandler</item>
                <item name="mail" xsi:type="object">SoftCommerce\Core\Logger\Handler\MailStreamHandler</item>
            </argument>
        </arguments>
    </type>
</config>
